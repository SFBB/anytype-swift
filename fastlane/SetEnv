lane :set_amplitude_api_key_to_info_plist do |options|
    set_info_plist_value(
        path: "./Anytype/Supporting files/Info.plist", 
        key: "AmplitudeApiKey", 
        value: ENV["AMPLITUDE_API_KEY"]
    )
end

